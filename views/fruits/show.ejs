    </nav>>
    </header>
    <div class="hero-image">
      <div class="overlay hero-text">
        <h1>Fruits</h1>
      </div>
    </div>
    <section class="timeline">
      <div class="timeline-row">
        <div class="timeline-column">
          <h2 class="title">
            <%= fruit.name %><span class="animate" style="--i: 1"></span>
          </h2>
          <div class="timeline-box">
            
            <div class="timeline-content">
              <div class="content">
                <div class="year">
                  <i class="bx bxs-calendar"></i>2021 - 2022
                </div>
                <h3><%= fruit.name %></h3>
                <img src="<%= fruit.img %>" alt="fruit">
                <p><%= fruit.prepTime %></p>
                <p><%= fruit.cookTime %></p>
                <p><%= fruit.servings %></p>
                <p><%= fruit.ingredients %></p>
                <p><%= fruit.instructions %></p>
                <a href="/fruits/">Go back to the Fruits page</a>
              </div>
              <button><a href="/fruits/<%= id %>/delete"">Delete Fruit</a></button>
              <button><a href="/fruits/<%= id %>/edit"">Edit Fruit</a></button>
            </div>
            <div></div>
          

            <span class="animate" style="--i: 2"></span>
          </div>
        </div>
        <!--Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
